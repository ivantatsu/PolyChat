<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.polychat.views.activity.LogInActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statusConfig"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/circle_style"
        android:backgroundTint="#8AFF77"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/iniciales"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:background="@drawable/circle_style"
            android:backgroundTint="@color/otherMsg"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="76sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imagenPerfil"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:background="@drawable/background_white"
        android:foregroundGravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="189dp">


        <TextView
            android:id="@+id/btnSeguridad"
            android:layout_width="330dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ajustes_style"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="InformaciÃ³n seguridad y privacidad"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/button"
            android:textColorHint="#4B4B4B"
            android:textColorLink="@color/button"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNotificaciones"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/btnSoporte"
            android:layout_width="330dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ajustes_style"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Soporte"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/button"
            android:textColorHint="#4B4B4B"
            android:textColorLink="@color/button"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSeguridad"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/btnLogOut"
            android:layout_width="161dp"
            android:layout_height="41dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_style_red"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical|center"
            android:gravity="center"
            android:hint="Cerrar Sesion"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/button"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSoporte"
            tools:ignore="HardcodedText,MissingConstraints" />

        <ImageView
            android:id="@+id/imgSoporte"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSeguridad"
            app:srcCompat="@drawable/img_computer" />

        <ImageView
            android:id="@+id/imgSeguridad"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgNotif"
            app:srcCompat="@drawable/img_lock" />

        <TextView
            android:id="@+id/btnNotificaciones"
            android:layout_width="330dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ajustes_style"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Notificaciones"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/button"
            android:textColorHint="#4B4B4B"
            android:textColorLink="@color/button"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailUser"
            tools:ignore="HardcodedText,MissingConstraints" />

        <ImageView
            android:id="@+id/imgNotif"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgEditar"
            app:srcCompat="@drawable/img_location" />

        <TextView
            android:id="@+id/emailUser"
            android:layout_width="330dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ajustes_style"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Editar perfil"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/button"
            android:textColorHint="#4B4B4B"
            android:textColorLink="@color/button"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints" />

        <ImageView
            android:id="@+id/imgEditar"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_file" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menubar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/menuConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_settings_indigo_900" />

            <ImageView
                android:id="@+id/menuChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_search_gray_600" />

            <ImageView
                android:id="@+id/menuCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_vector_gray_600" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/titleUser"
        android:layout_width="359dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/statusConfig"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="@+id/statusConfig"
        app:layout_constraintTop_toBottomOf="@+id/statusConfig" />

</androidx.constraintlayout.widget.ConstraintLayout>